<html>
	<head>
		<title>Restaurant App - Login</title>
		<% include bootstrap %>
	</head>
	<body>
		<% include header %>
		<div class="container" style="margin-top:100px" align="center">
			<div class="card text-center col-md-4">
				<div class="card-body">
					<h3 class="card-title">Login</h3>
					<hr><br>
					<form method="post">
						<input type="text" name="userid" class="form-control" placeholder="User ID" required><br>
						<input type="password" name="password" class="form-control" placeholder="Password" required><br>
						<p><font color="red"><b><%= prompt %></b></font></p>
						<input type="submit" value="Login" formaction="/login" class="btn btn-primary btn-block"><br>
						<input type="submit" value="Register" formaction="/register" class="btn btn-primary btn-block"><br>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>