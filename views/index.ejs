<html>
	<head>
		<title>Restaurant App</title>
		<% include bootstrap %>
	</head>
	<body>
		<% include header %>
		<div class="container" style="margin-top:100px">
			<% if (restaurants.length > 0) { %>
				<p>Showing <%= restaurants.length %> documents.</p>
				<div class="list-group">
					<% for (i in restaurants) { %>
						<a href="/restaurant?_id=<%= restaurants[i]._id %>" class="list-group-item"><%= restaurants[i].name %></a>
					<% } %>
				</div>
			<% } else { %>
				<h3>No restaurant found.</h3>
			<% } %>
		</div>
	</body>
</html>